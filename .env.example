# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=expensetracker
DATABASE_URL=postgresql://postgres:your-secure-password-here@db:5432/expensetracker

# JWT Secret (REQUIRED - generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Node Environment
NODE_ENV=production

# Port Configuration
PORT=3000
BACKEND_PORT=3001
FRONTEND_PORT=3333

# CORS Configuration (IMPORTANT: Set to your actual domain in production)
FRONTEND_URL=http://localhost:3333

# Optional: If deploying with custom backend URL
BACKEND_URL=http://backend:3000
